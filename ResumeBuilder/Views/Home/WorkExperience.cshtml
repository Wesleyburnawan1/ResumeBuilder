@model ResumeBuilder.Models.WorkExperience

@{
    ViewData["Title"] = "Work Experience";
}
<style>
    label {
        text-align: left;
    }
</style>
<div class="text-left" style="margin-left:18%;">
    <span style="font-size:40px;">Enter Your Work Experiences here</span>
    <form method="post" asp-action="SubmitWorkExperience">

        <div class="row mb-3">
            <div class="col-sm-6">
                <label class="col-sm-12 col-form-label">Company Name</label>
                <input name="CompanyName" type="text" class="form-control" asp-for="CompanyName" />
            </div>
            <div class="col-sm-6">
                <label class="col-sm-12 col-form-label">Title</label>
                <input name="Title" type="text" class="form-control" asp-for="Title" />
            </div>
        </div>
        <div class="row mb-3 d-flex justify-content-between">
            <div class="col-sm-5">
                <label class="col-sm-12 col-form-label">Start Date</label>
                <input name="StartDate" type="date" class="form-control" asp-for="StartDate" />
            </div>

            <div class="col-sm-5">
                <label class="col-sm-12 col-form-label">End Date</label>
                <input name="EndDate" type="date" class="form-control" asp-for="EndDate" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-12">
                <label class="col-sm-12 col-form-label">Description</label>
                <textarea id="txtdesc" class="form-control" rows="5" placeholder="Enter your description here" asp-for="Description"></textarea>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary" style="float: right">Submit</button>
                <button type="reset" class="btn btn-primary" style="float: right; margin-right: 5px">Clear</button>
            </div>
        </div>
    </form>
</div>
