@model ResumeBuilder.Models.Certifications

@{
    ViewData["Title"] = "Certifications";

}

<style>
    label {
        text-align: left;
    }
</style>
<div class="text-left" style="margin-left:18%;">
    <span style="font-size:40px;">Enter Your Certifications here</span>
    <form method="post" asp-action="SubmitCertifications">

        <div class="row mb-3">
            <div class="col-sm-12">
                <label class="col-sm-12 col-form-label">Name</label>
                <input type="text" class="form-control" name="Name" />

            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-12">
                <label class="col-sm-12 col-form-label">Issuer</label>
                <input type="text" class="form-control" name="Issuer" />

            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary" style="float: right">Submit</button>
                <button type="submit" class="btn btn-primary" asp-action="ClearForm" style="float: right; margin-right: 5px">Clear</button>
            </div>
        </div>
    </form>
</div>
