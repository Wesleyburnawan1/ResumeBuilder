@{
    ViewData["Title"] = "Certifications";

}

<style>
    label {
        text-align: left;
    }
</style>
<div class="text-left" style="margin-left:18%;">
    <span style="font-size:40px;">Enter Your Certifications here</span>
    <div class="row mb-3">
        <div class="col-sm-12">
            <label class="col-sm-12 col-form-label">Name</label>
            <input id="txtname" type="text" class="form-control" />
        </div>
    </div> 
    <div class="row mb-3">
        <div class="col-sm-12">
            <label class="col-sm-12 col-form-label">Issuer</label>
            <input id="txtdesc" type="text" class="form-control"></input>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary" id="btnSUbmit" Style="float: right"> Submit</button>
            <button type="submit" class="btn btn-primary" id="btnclear" Style="float: right; margin-right: 5px">Clear</button>
        </div>
    </div>
</div>

