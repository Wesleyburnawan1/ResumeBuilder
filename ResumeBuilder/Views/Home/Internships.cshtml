@{
    ViewData["Title"] = "Internships";

}
<style>
    label {
        text-align: left;
    }
</style>
<div class="text-left" style="margin-left:18%;">
    <span style="font-size:40px;">Enter Your Internships Experiences here</span>
    <div class="row mb-3">
        <div class="col-sm-6">
            <label class="col-sm-12 col-form-label">Company Name</label>
            <input id="txtcompanyname" type="text" class="form-control" />
        </div>
        <div class="col-sm-6">
            <label class="col-sm-12 col-form-label">Technolgy Used</label>
            <input id="txttechnologyused" type="text" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4">
            <label class="col-sm-12 col-form-label">Position</label>
            <input id="txtposition" type="text" class="form-control" />
        </div>
        <div class="col-sm-4">
            <label class="col-sm-12 col-form-label">Duration</label>
            <input id="txtduration" type="text" class="form-control" />
        </div>

        <div class="col-sm-4">
            <label class="col-sm-12 col-form-label">Location</label>
            <input id="txtlocation" type="text" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-12">
            <label class="col-sm-12 col-form-label">Description</label>
            <textarea id="txtdesc" type="text" class="form-control" rows="5" placeholder="Enter your description here"></textarea>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary" id="btnSUbmit" Style="float: right"> Submit</button>
            <button type="submit" class="btn btn-primary" id="btnclear" Style="float: right; margin-right: 5px">Clear</button>
        </div>
    </div>
</div>



