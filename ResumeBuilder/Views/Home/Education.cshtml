@{
    ViewData["Title"] = "Education";

}
<style>
    label {
        text-align: left;
    }
</style>
<div class="text-left" style="margin-left:18%;">
    <span style="font-size:40px;">Enter Your Educational Details here</span>
    <div>
        <div class="row mb-3">
            <div class="col-sm-6">
                <label class="col-sm-12 col-form-label">Name of Institution</label>
                <input id="txtinstitutename" type="text" class="form-control" />
            </div>
            <div class="col-sm-6">
                <label class="col-sm-12 col-form-label">Location</label>
                <input id="txtlocation" type="text" class="form-control" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <label class="col-sm-12 col-form-label">Starting Year</label>
                <select id="myDropdown" class="form-control">
                    <option value="">Select an option</option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                </select>
            </div>
            <div class="col-sm-3">
                <label class="col-sm-12 col-form-label">Passing Year</label>
                <select id="myDropdown" class="form-control">
                    <option value="">Select an option</option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                </select>
            </div>
            <div class="col-sm-3">
                <label for="inputNumber" class="col-sm-12 col-form-label">GPA (out of 10)</label>
                <input id="txtgpa" class="form-control" />

            </div>

            <div class="col-sm-3">
                <label for="inputNumber" class="col-sm-12 col-form-label">Degree</label>
                <input type="text" id="txtdegree" class="form-control" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-12">

                <button type="submit" class="btn btn-primary" id="btnSUbmit" Style="float: right"> Submit</button>
                <button type="submit" class="btn btn-primary" id="btnclear" Style="float: right; margin-right: 5px">Clear</button>
            </div>
        </div>
    </div>
</div>

